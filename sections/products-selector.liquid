{%- style -%}
  /* Header Centering */
  .product-selector__header-wrapper {
    text-align: center;
  }

  .section-{{ section.id }}
  -padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Tabs */
  .product-selector__tabs {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .product-tab-button {
    display: flex;
    justify-content: center;
    padding: 0.5rem 0.25rem;
    min-width: 100px;
    border: 1px solid rgb(var(--color-foreground), 0.2);
    background: transparent;
    color: rgb(var(--color-foreground));
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    font-size: 1.25rem;
    font-family: var(--font-body-family);
    line-height: 1.4;
    transition: all 0.25s ease;
  }

  .product-tab-button:hover {
    border-color: rgb(var(--color-foreground));
    background: rgb(var(--color-foreground-05));
  }

  .product-tab-button.active {
    border-color: rgb(var(--color-button));
    background-color: rgb(var(--color-button), 0.2);
    color: rgb(var(--color-foreground));
    transform: scale(1.1);
  }

  /* Product content fade transition */
  .product-selector__content {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease
    , transform 0.3s ease;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
  }

  .product-selector__content.active {
    opacity: 1;
    pointer-events: auto;
    transform: translateY(0);
    position: relative;
  }

  /* Product Layout */
  .product-selector__product-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .product-selector__product-info {
      flex-direction: row;
      align-items: flex-start;
      justify-content: center;
    }
  }

  .product-selector__product-media img {
    width: 320px;
    height: auto;
    border-radius: 12px;
    object-fit: cover;
  }

  .product-selector__product-details {
    text-align: left;
  }

  .product-selector__product-details h3 {
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
  }

  .product-selector__product-description {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .product-form__buttons button {
    margin-top: 1rem;
    cursor: pointer;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="product-selector__header-wrapper {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <div class="title-wrapper text-center ">
          <h2 class="title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
        </div>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <!-- Tabs -->
      <div class="product-selector__tabs">
        {%- for block in section.blocks -%}
          {%- assign product = block.settings.product -%}
          {%- if product != null -%}
            <button
              type="button"
              class="product-tab-button"
              data-index="{{ forloop.index0 }}"
            >
              {{ block.settings.button_label | default: product.title }}
            </button>
          {%- endif -%}
        {%- endfor -%}
      </div>

      <!-- Product Contents -->
      <div class="product-selector__contents {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {%- for block in section.blocks -%}
          {%- assign product = block.settings.product -%}
          {%- if product != null -%}
            {%- assign product_form_id = 'product-form-' | append: section.id | append: forloop.index -%}
            <div class="product-selector__content" data-index="{{ forloop.index0 }}">
              <div class="product-selector__product-info">
                <div class="product-selector__product-media">
                  {%- if product.featured_media -%}
                    {{
                      product.featured_media
                      | image_url: width: 800
                      | image_tag: loading: 'lazy', alt: product.featured_media.alt
                    }}
                  {%- else -%}
                    {{ 'product-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>

                <div class="product-selector__product-details">
                  <h3>{{ product.title }}</h3>
                  {%- if product.description != blank -%}
                    <div class="product-selector__product-description rte">
                      {{ product.description }}
                    </div>
                  {%- endif -%}

                  <div class="product-selector__product-price">
                    {%- render 'price', product: product -%}
                  </div>

                  <product-form class="product-form" data-section-id="{{ section.id }}">
                    <div
                      class="product-form__error-message-wrapper"
                      role="alert"
                      hidden
                    >
                      <span class="svg-wrapper">
                        {{- 'icon-error.svg' | inline_asset_content -}}
                      </span>
                      <span class="product-form__error-message"></span>
                    </div>

                    {%- form 'product',
                      product,
                      id: product_form_id,
                      class: 'form',
                      novalidate: 'novalidate',
                      data-type: 'add-to-cart-form'
                    -%}
                      <input
                        type="hidden"
                        name="id"
                        value="{{ product.selected_or_first_available_variant.id }}"
                        {% if product.selected_or_first_available_variant.available == false
                          or product.selected_or_first_available_variant == null
                        %}
                          disabled
                        {% endif %}
                        class="product-variant-id"
                      >

                      <div class="product-form__buttons">
                        {%- liquid
                          assign check_against_inventory = true
                          if product.selected_or_first_available_variant.inventory_management != 'shopify' or product.selected_or_first_available_variant.inventory_policy == 'continue'
                            assign check_against_inventory = false
                          endif
                          if product.selected_or_first_available_variant.quantity_rule.min > product.selected_or_first_available_variant.inventory_quantity and check_against_inventory
                            assign quantity_rule_soldout = true
                          endif
                        -%}
                        <button
                          id="ProductSubmitButton-{{ section.id }}-{{ forloop.index }}"
                          type="submit"
                          name="add"
                          class="product-form__submit button button--primary"
                          {% if product.selected_or_first_available_variant.available == false
                            or quantity_rule_soldout
                            or product.selected_or_first_available_variant == null
                          %}
                            disabled
                          {% endif %}
                        >
                          <span>
                            {%- if product.selected_or_first_available_variant == null -%}
                              {{ 'products.product.unavailable' | t }}
                            {%- elsif product.selected_or_first_available_variant.available == false
                              or quantity_rule_soldout
                            -%}
                              {{ 'products.product.sold_out' | t }}
                            {%- else -%}
                              {{ block.settings.button_text | default: 'Add to Cart' }}
                            {%- endif -%}
                          </span>
                          {%- render 'loading-spinner' -%}
                        </button>
                      </div>
                    {%- endform -%}
                  </product-form>
                </div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.product-tab-button');
    const contents = document.querySelectorAll('.product-selector__content');

    function showContent(index) {
      contents.forEach((c) => {
        c.classList.remove('active');
        c.style.pointerEvents = 'none';
      });
      tabs.forEach((t) => t.classList.remove('active'));

      const activeContent = document.querySelector(`.product-selector__content[data-index='${index}']`);
      if (activeContent) {
        activeContent.classList.add('active');
        activeContent.style.pointerEvents = 'auto';
      }
      tabs[index].classList.add('active');
    }

    tabs.forEach((tab) => {
      tab.addEventListener('click', () => showContent(tab.dataset.index));
    });

    // Initial state
    if (contents[0]) showContent(0);
  });
</script>

